.box{
    width 100%
    padding rem(20) 0
    .header{
        height rem(20)
        line-height rem(20)
        display flex
        justify-content space-between
        padding rem(5) rem(20) 
        color red
        font-size rem(20)
    }
    h1{
        font-weight normal
        margin rem(30) rem(50)
    }
    .login{
        width 86%
        margin 0 auto
        .van-cell{
            border-bottom 1px solid #333
            margin rem(10) 0
        }
        .van-password-input{
            margin 0
        }
        .van-password-input li{
            border 1px solid #333
        }
    }
    .btn{
        display flex
        margin rem(20) 0
        padding 0 rem(10)
        justify-content space-between
        .van-button{
            width rem(140)
            margin rem(10) rem(20)
        }
    }

}
.tishi p{
    height rem(100)
    line-height rem(100)
    text-align center
}