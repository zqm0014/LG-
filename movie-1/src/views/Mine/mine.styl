div.tou{ 
    background:linear-gradient(to right,#E31D40,#F13E41)
    width 100%;
    height rem(250);
    p{
        overflow hidden
        width 100%;
        span{
            float right;
            display inline-block;
            padding rem(10) rem(20) 0 0
            height rem(30)
            color #fff
            font-size rem(22)
        }
    }
    .container{
        padding-bottom rem(10)
        display flex;
        justify-content space-between
        color #fff
        .left{
            height rem(70)
            line-height rem(70)
            display flex
            font-size rem(20)
            img{
                width rem(70)
                height rem(70)
                border-radius 50%
                margin 0 rem(20) 
           }
        }
        .right{
            align-self:center
            font-size rem(16)
            span{
                display inline-block
                height rem(25)
                width rem(90)
                padding rem(2)
                text-align center
                background-color rgba(255,255,255,0.2)
                border-radius rem(50) rem(0) rem(0) rem(50)
            }
        }
    }
    .nav{
        list-style none
        overflow hidden
        width 100%
        color #eee
        padding rem(20) 0
        li{
            width 16.6%
            height rem(30)
            line-height rem(30)
            text-align center
            float left
        }
    }
    .dingdan{
        border-radius rem(5)
        width 90%
        margin 0 auto 
        height rem(60)
        background #fff
        line-height rem(60)
        display flex
        justify-content space-between
        .bian{
            font-weight bold
            font-size rem(18)
            padding-left rem(10)
        }
        .dan{
            font-size rem(14)
            color #666
        }
   }
}
.zhong{
    box-shadow 0px -10px 20px 10px #fff
    width 100%
    h3{
        padding rem(20) rem(15)
    }
    .fuwu{
        display flex
        flex-flow wrap
        justify-content space-between
        padding 0 rem(25)
        img{
            width 20%
            height 20%
        }
    }
}
.footer{
    overflow hidden
    background #F6F6F6
    .setting{
        margin rem(10) 0
        background #fff
        p{
            padding 0 rem(10)
            font-size rem(14)
            display flex
            justify-content space-between
            height rem(40)
            line-height rem(40)
        }
        p:nth-child(1){
            border-bottom 1px solid #999
        }
    }
}